      }
    },
    "/api/submissions": {
      "get": {
        "summary": "Get all submissions",
        "description": "Mengambil semua submissions milik user atau sistem.",
        "tags": ["Submission"],
        "responses": {
          "200": {
            "description": "Data submissions berhasil diambil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Data Berhasil Didapatkan"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "submissions": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string",
                                "format": "uuid",
                                "example": "b5f4a244-7828-4fa5-81ee-48dc94aa15e5"
                              },
                              "submissionUrl": {
                                "type": "string",
                                "example": "http:///www.tiktok.co.id"
                              },
                              "status": {
                                "type": "string",
                                "example": "pending"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "LoginPayload": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password" }
        },
        "required": ["email", "password"]
      },
      "RegisterSuccessResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "msg": { "type": "string" },
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "string", "format": "uuid" },
              "role": { "type": "string" },
              "avatarUrl": { "type": "string", "format": "uri" },
              "createdAt": { "type": "string", "format": "date-time" }
            }
          }
        }
      },
      "LoginSuccessResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "msg": { "type": "string" },
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "string", "format": "uuid" },
              "email": { "type": "string", "format": "email" },
              "name": { "type": "string" },
              "token": { "type": "string", "description": "Bearer JWT Token" }
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": false },
          "msg": { "type": "string" },
          "errors": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
