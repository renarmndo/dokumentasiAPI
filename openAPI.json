  "paths": {
    "/api/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Registrasi Pengguna Baru",
        "description": "Membuat akun pengguna baru dalam sistem. Mendukung upload gambar SIM.",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "namaLengkap": {
                    "type": "string",
                    "example": "Rendani Hutagaol"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "rendani@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "123rendani123"
                  },
                  "username": { "type": "string", "example": "rendani_h" },
                  "noTelepon": { "type": "string", "example": "081234567890" },
                  "tanggalLahir": {
                    "type": "string",
                    "format": "date",
                    "example": "2000-01-01"
                  },
                  "kota": { "type": "string", "example": "Tangerang Selatan" },
                  "alasanBergabung": {
                    "type": "string",
                    "example": "Karena seru dan banyak penggemar"
                  },
                  "fotoSim": {
                    "type": "string",
                    "format": "binary",
                    "description": "Upload file gambar SIM"
                  }
                },
                "required": [
                  "namaLengkap",
                  "email",
                  "password",
                  "username",
                  "noTelepon",
                  "tanggalLahir",
                  "kota"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Registrasi berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterSuccessResponse"
                },
                "example": {
                  "success": true,
                  "msg": "Registrasi Berhasil",
                  "data": {
                    "id": "24dfc80c-0e46-430d-a91c-4eb8590c3628",
                    "role": "user",
                    "avatarUrl": "https://png.pngtree.com/png-vector/20250512/ourmid/pngtree-default-avatar-profile-icon-vector-png-image_16213769.png",
                    "createdAt": "2025-09-22T17:06:41.464Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Input tidak valid",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" },
                "example": {
                  "success": false,
                  "msg": "Validation error",
                  "errors": ["Email sudah terdaftar"]
                }
              }
            }
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login Pengguna",
        "description": "Mengautentikasi pengguna dan mengembalikan token JWT jika berhasil.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginPayload" },
              "example": {
                "email": "rendani@gmail.com",
                "password": "123rendani123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginSuccessResponse"
                },
                "example": {
                  "success": true,
                  "msg": "Login Berhasil",
                  "data": {
                    "id": "24dfc80c-0e46-430d-a91c-4eb8590c3628",
                    "email": "rendani@gmail.com",
                    "name": "rendani hutagaol",
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" },
                "example": {
                  "success": false,
                  "msg": "Email atau password salah"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/pending-verification": {
      "get": {
        "tags": ["Admin"],
        "summary": "Get Pending Verification Users",
        "description": "Mengambil daftar user dengan status verifikasi `pending`.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Halaman keberapa (pagination)."
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            },
            "description": "Jumlah data per halaman."
          }
        ],
        "responses": {
          "200": {
            "description": "Berhasil ambil data pending users",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "msg": "Berhasil ambil data pending users",
                  "data": {
                    "total": 0,
                    "page": 1,
                    "totalPage": 0,
                    "data": []
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request / Parameter tidak valid",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "msg": "Parameter page atau limit tidak valid"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "msg": "Terjadi Kesalahan Pada Server"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/{userId}/verification": {
      "patch": {
        "tags": ["Admin"],
        "summary": "Verifikasi User",
        "description": "Endpoint untuk admin memverifikasi user (approve/reject).",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "ID user yang ingin diverifikasi."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["approved", "rejected"],
                    "example": "rejected"
                  },
                  "verifikasiNotes": {
                    "type": "string",
                    "example": "Data tidak valid, mohon lengkapi data anda"
                  }
                },
                "required": ["status"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User berhasil diverifikasi",
            "content": {
              "application/json": {
                "example": {
                  "msg": "User Berhasil diverifikasi",
                  "data": {
                    "id": "24dfc80c-0e46-430d-a91c-4eb8590c3628",
                    "namaLengkap": "rendani hutagaol",
                    "email": "rendani@gmail.com",
                    "username": "rendaniHutagaol23",
                    "noTelepon": "089756341212",
                    "tanggalLahir": "2001-07-20T00:00:00.000Z",
                    "kota": "Jakarta Barat",
                    "role": "user",
                    "avatarUrl": "https://png.pngtree.com/png-vector/20250512/ourmid/pngtree-default-avatar-profile-icon-vector-png-image_16213769.png",
                    "verifikasiStatus": "rejected",
                    "verifikasiNotes": "Data tidak valid, mohon lengkapi data anda",
                    "fotoSim": "/uploads/1758560800925_654245354.jpg",
                    "alasanBergabung": "Karena Seru dan banyak penggemar",
                    "verfifiedBy": "afde01ce-5877-4c27-b05d-c1872515ea56",
                    "verifiedAt": "2025-09-22T18:30:59.996Z",
                    "createdAt": "2025-09-22T17:06:41.000Z",
                    "updatedAt": "2025-09-22T18:30:59.997Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request (status tidak valid / body salah)",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "msg": "Status verifikasi tidak valid"
                }
              }
            }
          },
          "404": {
            "description": "User tidak ditemukan",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "msg": "User tidak ditemukan"
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "msg": "Terjadi Kesalahan Pada Server"
                }
              }
            }
          }
        }
      }
    },
    "/api/challengen": {
      "post": {
        "summary": "Create a new challenge",
        "description": "Endpoint untuk membuat challenge baru.",
        "tags": ["Admin Create Challenge"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Challenge Upload Konten 2"
                  },
                  "description": {
                    "type": "string",
                    "example": "Upload konten kreatif di TikTok/IG"
                  },
                  "startDate": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-09-23 15:25:00"
                  },
                  "endDate": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-09-29 15:27:00"
                  }
                },
                "required": ["title", "description", "startDate", "endDate"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Challenge berhasil dibuat",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "msg": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
                          "example": "1f87524b-ab20-40ed-9610-2f6ac938a245"
                        },
                        "title": {
                          "type": "string",
                          "example": "Challenge Upload Konten 2"
                        },
                        "description": {
                          "type": "string",
                          "example": "Upload konten kreatif di TikTok/IG"
                        },
                        "startDate": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2025-09-23T08:25:00.000Z"
                        },
                        "endDate": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2025-09-29T08:27:00.000Z"
                        },
                        "adminId": {
                          "type": "string",
                          "format": "uuid",
                          "example": "0ad41dfd-80ae-4e5b-b95f-41e78cfef413"
                        },
                        "bannerUrl": {
                          "type": ["string", "null"],
                          "example": null
                        },
                        "status": {
                          "type": "string",
                          "example": "inactive"
                        },
                        "updatedAt": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2025-09-23T08:46:56.530Z"
                        },
                        "createdAt": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2025-09-23T08:46:56.530Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/challenges": {
      "get": {
        "summary": "Get all challenges for users",
        "description": "Mengambil daftar challenge yang tersedia untuk user.",
        "tags": ["Get Challenge"],
        "responses": {
          "200": {
            "description": "Daftar challenge berhasil diambil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "count": { "type": "integer", "example": 1 },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "format": "uuid",
                            "example": "1f87524b-ab20-40ed-9610-2f6ac938a245"
                          },
                          "title": {
                            "type": "string",
                            "example": "Challenge Upload Konten 2"
                          },
                          "description": {
                            "type": "string",
                            "example": "Upload konten kreatif di TikTok/IG"
                          },
                          "startDate": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2025-09-23T08:25:00.000Z"
                          },
                          "endDate": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2025-09-29T08:27:00.000Z"
                          },
                          "status": {
                            "type": "string",
                            "example": "active"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/submissions/{challengeId}": {
      "post": {
        "summary": "Submit konten untuk challenge tertentu",
        "description": "User mengirimkan submission URL untuk challenge berdasarkan challengeId.",
        "tags": ["Submission"],
        "parameters": [
          {
            "name": "challengeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "1f87524b-ab20-40ed-9610-2f6ac938a245"
            },
            "description": "ID challenge yang akan diikuti"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "submissionUrl": {
                    "type": "string",
                    "example": "http:///www.tiktok.co.id"
                  }
                },
                "required": ["submissionUrl"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Submission gagal karena user sudah pernah submit sebelumnya",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Anda Sudah Pernah mengirimkan submission untuk challenge ini"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/submissions/{submissionId}": {
      "patch": {
        "summary": "Update submission",
        "description": "Mengubah data submission berdasarkan submissionId.",
        "tags": ["Submission"],
        "parameters": [
          {
            "name": "submissionId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "b5f4a244-7828-4fa5-81ee-48dc94aa15e5"
            },
            "description": "ID dari submission yang akan diperbarui"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "submissionUrl": {
                    "type": "string",
                    "example": "Hello Dunia"
                  }
                },
                "required": ["submissionUrl"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Submission berhasil diubah",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Submission Berhasil Dirubah"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
                          "example": "b5f4a244-7828-4fa5-81ee-48dc94aa15e5"
                        },
                        "chalengesId": {
                          "type": "string",
                          "format": "uuid",
                          "example": "1f87524b-ab20-40ed-9610-2f6ac938a245"
                        },
                        "userId": {
                          "type": "string",
                          "format": "uuid",
                          "example": "38181a26-eb1b-4533-b1b7-a87235a2fa1b"
                        },
                        "submissionUrl": {
                          "type": "string",
                          "example": "Hello Dunia"
                        },
