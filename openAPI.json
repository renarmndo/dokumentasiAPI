{
  "openapi": "3.0.0",
  "info": {
    "title": "Dokumentasi API Pengguna & Autentikasi",
    "description": "Dokumentasi ini menyediakan detail untuk endpoint registrasi dan login pengguna.",
    "version": "1.0.0",
    "contact": {
      "name": "RENDANI A H HUTAGAOL"
    }
  },
  "servers": [
    {
      "url": "https://bethann-fractious-flavourfully.ngrok-free.app",
      "description": "Development Server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "Endpoint yang berhubungan dengan autentikasi pengguna"
    }
  ],
  "paths": {
    "/api/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Registrasi Pengguna Baru",
        "description": "Membuat akun pengguna baru dalam sistem.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterPayload"
              },
              "example": {
                "namaLengkap": "Rendani Hutagaol",
                "email": "rendani@gmail.com",
                "password": "rahasia123",
                "username": "rendani_h",
                "noTelepon": "081234567890",
                "tanggalLahir": "2000-01-01",
                "kota": "Tangerang Selatan"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Registrasi berhasil. Data ringkas pengguna baru dikembalikan.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterSuccessResponse"
                },
                "example": {
                  "success": true,
                  "msg": "Registrasi Berhasil",
                  "data": {
                    "id": "24253ad7-3e64-49b7-9172-3c94571483c2",
                    "role": "user",
                    "isVerifed": false,
                    "status": "active",
                    "avatarUrl": "https://png.pngtree.com/png-vector/20250512/ourmid/pngtree-default-avatar-profile-icon-vector-png-image_16213769.png",
                    "createdAt": "2025-09-22T09:20:20.077Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Input tidak valid (contoh: email sudah terdaftar, format salah).",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login Pengguna",
        "description": "Mengautentikasi pengguna dan mengembalikan token JWT jika berhasil.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginPayload"
              },
              "example": {
                "email": "admin@gmail.com",
                "password": "admin123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login berhasil, mengembalikan data pengguna dan token.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginSuccessResponse"
                },
                "example": {
                  "success": true,
                  "msg": "Login Berhasil",
                  "data": {
                    "id": "0e2891de-2e90-4cf9-ab8d-fa6e71108d0e",
                    "email": "admin@gmail.com",
                    "name": "admin",
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjBlMjg5MWRlLTJlOTAtNGNmOS1hYjhkLWZhNmU3MTEwOGQwZSIsImVtYWlsIjoiYWRtaW5AZ21haWwuY29tIiwibmFtZSI6ImFkbWluIiwicm9sZSI6InVzZXIiLCJpYXQiOjE3NTg1MzI5NTQsImV4cCI6MTc1ODUzNjU1NH0.xe_RC7F6iFrRvAnFExUQhm3hGQYtsRKMiyw5sWUQbwI"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Email atau password salah.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/getData": {
      "get": {
        "tags": ["Get Data Profile"]
      }
    }
  },
  "components": {
    "schemas": {
      "LoginPayload": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        },
        "required": ["email", "password"]
      },
      "RegisterPayload": {
        "type": "object",
        "properties": {
          "namaLengkap": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password",
            "minLength": 6
          },
          "username": {
            "type": "string"
          },
          "noTelepon": {
            "type": "string"
          },
          "tanggalLahir": {
            "type": "string",
            "format": "date",
            "example": "2002-04-21"
          },
          "kota": {
            "type": "string"
          }
        },
        "required": [
          "namaLengkap",
          "email",
          "password",
          "username",
          "noTelepon",
          "tanggalLahir",
          "kota"
        ]
      },
      "LoginSuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "msg": {
            "type": "string"
          },
          "data": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "name": {
                "type": "string"
              },
              "token": {
                "type": "string",
                "description": "Bearer token JWT untuk otorisasi."
              }
            }
          }
        }
      },
      "RegisterSuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "msg": {
            "type": "string"
          },
          "data": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "role": {
                "type": "string"
              },
              "isVerifed": {
                "type": "boolean"
              },
              "status": {
                "type": "string"
              },
              "avatarUrl": {
                "type": "string",
                "format": "uri"
              },
              "createdAt": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "msg": {
            "type": "string"
          }
        }
      }
    }
  }
}
